@model CarIndexViewModel
@{
    ViewData["Title"] = "Cars";
}

<h1>Cars</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>License plate</th>
            <th>Owner</th>
            <th>Car</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="4"><a asp-controller="Home" asp-action="New">Nieuwe auto toevoegen</a></td>
        </tr>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@car.Id">@car.LicensePlate</a> </td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@car.Id">@car.OwnerLabel</a></td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@car.Id">@car.TypeLabel</a></td>
                <td>
                    <form asp-controller="Home" asp-action="Delete" asp-route-id="@car.Id">
                        <input type="submit" value="Delete car"/>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4"><a asp-controller="Home" asp-action="New">Nieuwe auto toevoegen</a></td>
        </tr>
    </tbody>
</table>