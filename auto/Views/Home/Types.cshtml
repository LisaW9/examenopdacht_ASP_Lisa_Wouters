@model TypeIndexViewModel
@{
    ViewData["Title"] = "Types";
}

<h1>Owners</h1>
@foreach (var type in Model.Types)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@type.Brand @type.Model</th>
            </tr>
            <tr>
                <th>License plate</th>
                <th>Owner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in type.Cars)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@car.Id">@car.LicensePlate</a></td>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@car.Id">@car.OwnerLabel</a></td>
                </tr>
            }
        </tbody>
    </table>
}